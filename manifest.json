{
  "name": "fix japanese input issue in Confluence",
  "version": "1.4.0",
  "manifest_version": 3,
  "description": "Extension to improve Confluence experience for Japanese users",
  "content_scripts": [
    {
      "matches": ["https://*.atlassian.net/*"],
      "js": ["conflu.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "/icons/icon16.png",
    "48": "/icons/icon48.png",
    "128": "/icons/icon128.png"
  }
}
